{
    "compilerOptions": {
        "target": "es6",
        "allowJs": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "incremental": true,
        "outDir": "dist",
        "declaration": true,
        "plugins": [
            {
                "transform": "ts-transformer-keys/transformer"
            }
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}